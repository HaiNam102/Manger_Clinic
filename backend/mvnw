# ----------------------------------------------------------------------------
# Maven Wrapper startup batch script, version 3.3.2
#
# Optional ENV vars
# -----------------
#   JAVA_HOME - location of a JDK home dir, the wrapper will use it if set
#               and tests for it to be valid.
#   MAVEN_OPTS - parameters passed to the Java VM when running Maven
#                e.g. to debug Maven itself, use
#                set MAVEN_OPTS=-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000
#   MAVEN_SKIP_RC - flag to disable loading of mavenrc files
# ----------------------------------------------------------------------------

if [ -z "$MAVEN_SKIP_RC" ]; then
  if [ -f /etc/mavenrc ]; then
    . /etc/mavenrc
  fi
  if [ -f "$HOME/.mavenrc" ]; then
    . "$HOME/.mavenrc"
  fi
fi

# OS specific support. $var _must_ be set to either true or false.
cygwin=false
darwin=false
os400=false
case "`uname`" in
CYGWIN*) cygwin=true ;;
Darwin*) darwin=true ;;
OS400*) os400=true ;;
esac

# resolve links - $0 may be a softlink
PRG="$0"

while [ -h "$PRG" ]; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`/"$link"
  fi
done

PRGDIR=`dirname "$PRG"`

# Only set MAVEN_HOME if not already set
[ -z "$MAVEN_HOME" ] && MAVEN_HOME=`cd "$PRGDIR" >/dev/null; pwd`

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$MAVEN_HOME" ] && MAVEN_HOME=`cygpath --unix "$MAVEN_HOME"`
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# For OS400
if $os400; then
  # Support for ISA series is outdated and no longer supported, check for alternatives if needed
  # Set job priority to standard for interactive users
  COMMAND_TYPE='*IMMED'
fi

# Simple Maven Wrapper
WRAPPER_JAR="$PRGDIR/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_PROPERTIES="$PRGDIR/.mvn/wrapper/maven-wrapper.properties"

# Find Java
if [ -n "$JAVA_HOME" ]; then
  if [ -x "$JAVA_HOME/jre/sh/java" ]; then
    # IBM's JDK on AIX uses jre/sh/java in its Norton Guide and various docs
    JAVACMD="$JAVA_HOME/jre/sh/java"
  else
    JAVACMD="$JAVA_HOME/bin/java"
  fi
else
  JAVACMD="java"
fi

if ! command -v "$JAVACMD" >/dev/null 2>&1; then
  echo "Error: JAVA_HOME is not defined correctly." >&2
  echo "  We cannot execute $JAVACMD" >&2
  exit 1
fi

# Find Wrapper JAR
if [ ! -f "$WRAPPER_JAR" ]; then
  echo "Couldn't find $WRAPPER_JAR, please verify that it is in the correct location."
  exit 1
fi

# Run Wrapper
exec "$JAVACMD" \
  $MAVEN_OPTS \
  -classpath "$WRAPPER_JAR" \
  "-Dmaven.multiModuleProjectDirectory=$PRGDIR" \
  org.apache.maven.wrapper.MavenWrapperMain \
  "$@"
